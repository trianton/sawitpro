<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_43sdp"
    android:background="@color/ui_gray_bg"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/toolbarImgHome"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbarTxtTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sdp"
        android:gravity="center_vertical|start"
        android:text="Halo Title"
        android:textColor="@color/ui_black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@id/toolbarImgHome"
        app:layout_constraintEnd_toStartOf="@id/toolbarFilter"
        app:layout_constraintStart_toEndOf="@id/toolbarImgHome"
        app:layout_constraintTop_toTopOf="@id/toolbarImgHome" />

    <ImageView
        android:id="@+id/toolbarFilter"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_filter_alt_24"
        app:layout_constraintEnd_toStartOf="@id/toolbarSync"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbarSync"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_sync_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/toolbarDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="#8d8d8d"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarImgHome" />
</merge>